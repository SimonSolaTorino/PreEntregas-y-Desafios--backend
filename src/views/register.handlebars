<div>
    <h2>REGISTRATE!</h2>
    <form action="/now/register" method="post">
        <input type="text" placeholder="nombre" id="name" autocomplete="off" name="name" required>
        <input type="text" placeholder="apellido" id="lastname" autocomplete="off" name="lastname" required>
        <input type="email" placeholder="email" id="email" autocomplete="off" name="email" required>
        <input type="password" placeholder="contraseña" id="password" name="password" required>
        <input type="password" placeholder="repetir contraseña" id="confirmPassword" name="confirmPassword" required>
        <button type="submit">aceptar</button>
    </form>
